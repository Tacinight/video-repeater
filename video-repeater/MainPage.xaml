<Page
    x:Class="VideoRepeater.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoRepeater"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            
        </StackPanel>

        <SplitView Name="mySplitView" 
                   DisplayMode="CompactInline" 
                   Grid.Row="1" 
                   OpenPaneLength="200" 
                   CompactPaneLength="40" 
                   HorizontalAlignment="Left"
                   IsPaneOpen="True">
            <SplitView.Pane>
                <ListView Name="MenuItemListView"
                          ItemClick="MenuItemListView_ItemClick" >
                    <ListViewItem Name="ListBoxItem"
                                 Padding="0">
                        <Button Name="HamburgerBtn" 
                                FontFamily="Segoe MDL2 Assets"  
                                Content="&#xE700;" 
                                FontSize="24"
                                Click="HamburgerBtn_Click"/>
                    </ListViewItem>


                    <ListViewItem Name="ListBoxItem1">
                        <RelativePanel>
                            <TextBlock Name="mediaLibrary"
                                       FontFamily="Segoe MDL2 Assets"  
                                       Text="&#xE703;" 
                                       FontSize="24"
                                       Margin="-5,0,0,0"/>
                            <TextBlock Margin="20, 0, 0, 0"  
                                       Text="媒体库" 
                                       FontSize="16"
                                       RelativePanel.RightOf="mediaLibrary"
                                       RelativePanel.AlignVerticalCenterWithPanel="True"/>
                        </RelativePanel>
                    </ListViewItem>
                    <ListViewItem >
                        <RelativePanel>
                            <TextBlock Name="recordInfo"
                                       FontFamily="Segoe MDL2 Assets"  
                                       Text="&#xE707;" 
                                       FontSize="24"
                                       Margin="-5,0,0,0"/>
                            <TextBlock Margin="20, 0, 0, 0"
                                       Text="记录信息" 
                                       FontSize="16"
                                       RelativePanel.RightOf="recordInfo"
                                       RelativePanel.AlignVerticalCenterWithPanel="True"/>
                        </RelativePanel>
                    </ListViewItem>
                    <ListBoxItem >
                        <RelativePanel>
                            <TextBlock Name="CloudInfo"
                                       FontFamily="Segoe MDL2 Assets"  
                                       Text="&#xE707;" 
                                       FontSize="24"
                                       Margin="-5,0,0,0"/>
                            <TextBlock Margin="20, 0, 0, 0"
                                       Text="记录信息" 
                                       FontSize="16"
                                       RelativePanel.RightOf="CloudInfo"
                                       RelativePanel.AlignVerticalCenterWithPanel="True"/>
                        </RelativePanel>
                    </ListBoxItem>
                </ListView>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame Name="mainPageFrame">
                    
                </Frame>
                
            </SplitView.Content>
        </SplitView>
        
        
    </Grid>
</Page>
